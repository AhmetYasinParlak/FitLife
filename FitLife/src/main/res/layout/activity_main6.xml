    <TextView
        android:id="@+id/textView2000Calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000 KALORİ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView2000CalorieMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabah: Beyaz peynir, domates, salatalık, 1 dilim kepek ekmek, 1 fincan şekersiz çay.Öğle: 1 kase sebze çorbası, 1 kase peynirli salata.Akşam: 1 kase sebze yemeği, 5 kaşık bulgur pilavı"
        android:textSize="16sp"/>

    <!-- 2500 Kalori Menü -->
    <TextView
        android:id="@+id/textView2500Calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2500 KALORİ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>/>

    <TextView
        android:id="@+id/textView2500CalorieMenu"
